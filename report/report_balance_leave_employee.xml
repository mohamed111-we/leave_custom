<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="report_balance_leave_employee_search" model="ir.ui.view">
        <field name="name">report.balance.leave.employee.view.search</field>
        <field name="model">report.leave.balance.employee</field>
        <field name="arch" type="xml">
            <search string="Leave Balance Report">
                <group expand="0" string="Group By">
                    <filter name="group_employee" string="Employee"
                            context="{'group_by': 'emp_id'}"/>
                    <filter name="group_department" string="Department"
                            context="{'group_by': 'department_id'}"/>
                    <filter name="group_leave_type" string="Leave Type"
                            context="{'group_by': 'leave_type_id'}"/>
                    <filter name="group_job" string="Job"
                            context="{'group_by': 'job_id'}"/>
                    <filter name="group_gender" string="Gender"
                            context="{'group_by': 'gender'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="report_balance_leave_employee_tree" model="ir.ui.view">
        <field name="name">report.balance.leave.employee.view.tree</field>
        <field name="model">report.leave.balance.employee</field>
        <field name="arch" type="xml">
            <list string="Leave Balance Report" multi_edit="0" class="report-leave-balance-employee-view">
                <field name="emp_id"/>
                <field name="gender" optional="hide"/>
                <field name="country_id" optional="hide"/>
                <field name="department_id" optional="hide"/>
                <field name="job_id" optional="hide"/>
                <field name="leave_type_id"/>
                <field name="allocated_days"/>
                <field name="taken_days"/>
                <field name="balance_days"/>
            </list>
        </field>
    </record>

    <record id="report_balance_leave_employee_action" model="ir.actions.act_window">
        <field name="name">Balance Leave Report Employee</field>
        <field name="res_model">report.leave.balance.employee</field>
        <field name="view_mode">list,pivot,graph</field>
        <field name="search_view_id" ref="report_balance_leave_employee_search"/>
        <field name="domain">[]</field>
    </record>

    <menuitem id="report_balance_employee_leave_menu_root"
              name="Vacation Balances For All Employees"
              action="report_balance_leave_employee_action"
              parent="hr_holidays.menu_hr_holidays_report"
              sequence="10"/>
</odoo>
