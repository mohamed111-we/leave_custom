<odoo>
    <record id="view_leave_report_balances_wizard_form" model="ir.ui.view">
        <field name="name">leave.report.balances.wizard.form</field>
        <field name="model">leave.report.balances.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Leave Report">
                <group>
                    <field name="employee_ids" widget="many2many_tags"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state_filter"/>
                    <field name="report_type"/>
                </group>
                <footer>
                    <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_leave_report_balances_wizard" model="ir.actions.act_window">
        <field name="name">"Generate Leave Balances Report</field>
        <field name="res_model">leave.report.balances.wizard</field>
        <field name="view_mode">form</field>
         <field name="target">new</field>
    </record>


    <menuitem id="menu_leave_balances_report_wizard"
              name="Generate Balances Leave Report"
              parent="hr_holidays.menu_hr_holidays_report"
              action="action_leave_report_balances_wizard"
              sequence="9"/>
</odoo>